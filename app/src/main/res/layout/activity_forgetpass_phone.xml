<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".forgetpass_phone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/forget_pass"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Provide your registered Phone Number and Get Verified to Change the Password"
        android:fontFamily="@font/lemon"
        android:layout_marginTop="10dp"
        android:textColor="@color/coloryellow"
        android:layout_gravity="center"/>

    <com.hbb20.CountryCodePicker
        android:id="@+id/codePick_pass"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit"
        app:ccp_autoDetectCountry="true"
        app:ccp_showFlag="true"
        app:ccp_showNameCode="true"
        app:ccp_showFullName="true"
        android:gravity="center"
        app:ccp_contentColor="@android:color/darker_gray"
        android:contextClickable="true"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Phone Number"
        android:layout_gravity="center"
        android:textColorHint="#333333"
        android:drawableStart="@drawable/ic_phone"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:textSize="12dp"
        android:inputType="phone"
        android:textColor="@android:color/primary_text_dark"
        android:fontFamily="@font/lemon"
        android:background="@drawable/edit"
        android:id="@+id/phone"
        android:autofillHints=""
        />
    <Button
        android:id="@+id/button_get_otp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:fontFamily="@font/lemon"
        android:text="Get Verification code"
        android:textAlignment="center"
        android:textStyle="bold" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:hint="Enter Verification Code"
        android:layout_gravity="center"
        android:textColorHint="#333333"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:textSize="17dp"
        android:inputType="textPassword"
        android:textColor="@android:color/primary_text_dark"
        android:fontFamily="sans-serif-condensed-medium"
        android:background="@drawable/edit"
        android:id="@+id/VerificationCode"
        android:autofillHints=""
        />

    <Button
        android:id="@+id/button_verify"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:fontFamily="@font/lemon"
        android:text="Verify"
        android:textAlignment="center"
        android:textStyle="bold" />
    </LinearLayout>
</ScrollView>