<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".signup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="SIGN UP"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/coloryellow"
            android:fontFamily="@font/lemon"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Name"
            android:layout_gravity="center"
            android:textColorHint="#333333"
            android:drawableStart="@drawable/ic_person"
            android:layout_marginTop="40dp"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="12dp"
            android:inputType="textPersonName"
            android:textColor="@android:color/primary_text_dark"
            android:fontFamily="@font/coco"
            android:background="@drawable/edit"
            android:id="@+id/name"
            android:autofillHints=""
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Age"
            android:layout_gravity="center"
            android:textColorHint="#333333"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="12dp"
            android:inputType="number"
            android:textColor="@android:color/primary_text_dark"
            android:fontFamily="@font/lemon"
            android:background="@drawable/edit"
            android:id="@+id/age"
            android:autofillHints=""
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_photo"
            android:layout_marginTop="20dp"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:scaleType="centerCrop"
            app:civ_border_width="2dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/profile"
            app:civ_border_color="@color/coloryellow" />
        <Button
            android:id="@+id/select_profile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button"
            android:fontFamily="@font/lemon"
            android:text="Select Profile Picture"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textStyle="bold" />
        <com.hbb20.CountryCodePicker
            android:id="@+id/codePick_SignUp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit"
            app:ccp_autoDetectCountry="true"
            app:ccp_showFlag="true"
            app:ccp_showNameCode="true"
            app:ccp_showFullName="true"
            android:gravity="center"
            app:ccp_contentColor="@android:color/darker_gray"
            android:contextClickable="true"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Phone Number"
            android:layout_gravity="center"
            android:textColorHint="#333333"
            android:drawableStart="@drawable/ic_phone"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="12dp"
            android:inputType="phone"
            android:textColor="@android:color/primary_text_dark"
            android:fontFamily="@font/lemon"
            android:background="@drawable/edit"
            android:id="@+id/phone"
            android:autofillHints=""
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Password"
            android:layout_gravity="center"
            android:textColorHint="#333333"
            android:drawableStart="@drawable/ic_pass"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="17dp"
            android:inputType="textPassword"
            android:textColor="@android:color/primary_text_dark"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/edit"
            android:id="@+id/password"
            android:autofillHints=""
            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Re-Type  Password"
            android:layout_gravity="center"
            android:textColorHint="#333333"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="17dp"
            android:inputType="textPassword"
            android:textColor="@android:color/primary_text_dark"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/edit"
            android:id="@+id/repassword"
            android:autofillHints=""
            />
        <Button
            android:id="@+id/buttonverify"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button"
            android:fontFamily="@font/lemon"
            android:text="Get Verification code"
            android:textAlignment="center"
            android:textStyle="bold" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:hint="Enter Verification Code"
            android:layout_gravity="center"
            android:textColorHint="#333333"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:padding="20dp"
            android:textSize="17dp"
            android:inputType="textPassword"
            android:textColor="@android:color/primary_text_dark"
            android:fontFamily="sans-serif-condensed-medium"
            android:background="@drawable/edit"
            android:id="@+id/VerificationCode"
            android:autofillHints=""
            />

        <Button
            android:id="@+id/buttonregister"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/button"
            android:fontFamily="@font/lemon"
            android:text="Register"
            android:textAlignment="center"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>