<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:background="@color/bg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coloryellow"
        android:fontFamily="@font/lemon"
        android:textSize="20dp"
        android:text="User Profile"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_photo"
        android:layout_marginTop="20dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="centerCrop"
        app:civ_border_width="2dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/profile"
        app:civ_border_color="@color/coloryellow" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Photo"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:fontFamily="@font/coco"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:padding="10dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:fontFamily="@font/coco"
            android:textColor="@color/coloryellow"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:fontFamily="@font/coco"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:fontFamily="@font/coco"
            android:textColor="@color/coloryellow"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:fontFamily="@font/lemon"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="AGE"
            android:fontFamily="@font/coco"
            android:textColor="@color/coloryellow"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="28"
            android:fontFamily="@font/lemon"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Account Catergory"
            android:fontFamily="@font/coco"
            android:textColor="@color/coloryellow"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/categoryUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non Premium"
            android:fontFamily="@font/lemon"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"

        android:src="@drawable/congratulations"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are such a Patient User we have ever seen Before."
        android:textColor="#fff"
        android:fontFamily="@font/coco"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:lineSpacingExtra="10dp"/>
</LinearLayout>
</ScrollView>